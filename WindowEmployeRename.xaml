<Window x:Class="DepartmentsRepository_WPF.WindowEmployeRename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DepartmentsApp" Icon="Department.png" Height="250" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <GroupBox Header="Employe rename window" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock >Write employe new First name:</TextBlock>
                <TextBox x:Name="tbEmployeFirstName"/>
                <TextBlock Margin="0  10 0 0">Write employe new Last name:</TextBlock>
                <TextBox x:Name="tbEmployeLastName"/>
                <Button Margin="0 20" Click="Rename_Button_Click" >Rename Employe</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
