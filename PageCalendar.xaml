<Page x:Class="DepartmentsRepository_WPF.PageCalendar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DepartmentsRepository_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="DepartmentsApp" ShowsNavigationUI="True">
    
    <Grid>
        <GroupBox Header="Employe add-on window" Margin="10" Padding="10">
            <StackPanel>
                <Calendar x:Name="Calendar" DisplayMode="Decade" SelectedDatesChanged="Calendar_SelectedDatesChanged" />
                <Label>Selected date:</Label>
                <TextBox x:Name="tbCalendar" Text="{Binding ElementName=Calendar, Path=SelectedDate, StringFormat=d, UpdateSourceTrigger=PropertyChanged}"/>
                <Button x:Name="Button" Margin="0,20" Click="Button_Click">Select date</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
